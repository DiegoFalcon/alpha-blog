<% if obj.errors.any? %>
    <div class = "card text-white bg-danger mb-3">
      <div class = "card-header">
        <h2 class = "card-title">
          <%= pluralize(obj.errors.count, "error") %>
          prohibited this article from being saved
        </h2>
        </div>
        <div class = "card-body">
          <ul>
            <% obj.errors.full_messages.each do |msg| %>
              <li> <%= msg %> </li>
            <% end %>
          </ul>
        </div>
    </div>
<% end %>
